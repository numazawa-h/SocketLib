{
  "values":{
    "++seqno":123, // 参照するたびにインクリメントする
    "dst":"abc9",
    "src":"76543210",
  },

  "Commands":[
    { "id":"set-head", "cmd":"head", "values":{"dst":"dst","src":"src", "hdatm":"now", "seqno":"seqno" }},
    { "id":"set-init", "cmd":"set", "values":{"seqno":0, "src":"01234567" } },
    { "id":"send-ack", "cmd":"send", "dtype":"91" },
    { "id":"send-nak", "cmd":"send", "dtype":"92", "values":{"reson-nak":9}},
    { "id":"send-health", "cmd":"send", "dtype":"22", },
    { "id":"send-init", "cmd":"send", "dtype":"01" },
    { "id":"send-reset", "cmd":"send", "dtype":"02" },
    { "id":"send-resend-res", "cmd":"send", "dtype":"4f" },
  ],

  "Scripts":[
    { "id":"auto-head","when":"send", "cmd":"set-head" },
    { "id":"auto-init","when":"connect", "cmds":[ {"cmd":"set-init" },{"cmd":"send-init" } ] },
    { "id":"auto-ack", "when":"recv", "without":["91","92"], "cmd":"send-ack" },
    { "id":"health-check", "select":true, "enable":true, "when":"timer", "start":5000, "interval":2000, "cmd":"send-health" },
    { "id":"auto-response", "when":"recv", "cmds":[
          { "rdtype":"40", "cmd":"send-resend-res" },
      ]
    },
  ],
}
